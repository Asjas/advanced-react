{
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "prestart": "npm run codegen",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "heroku-postbuild": "next build",
    "preinstall": "npx npm-force-resolutions",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --ignore-path .eslintignore --write",
    "check-format": "prettier --ignore-path .eslintignore --list-different",
    "validate": "npm run check-format && npm run lint"
  },
  "dependencies": {
    "@apollo/client": "3.4.10",
    "@apollo/link-error": "2.0.0-beta.3",
    "@apollo/react-ssr": "4.0.0",
    "@stripe/react-stripe-js": "1.4.1",
    "@stripe/stripe-js": "1.17.1",
    "apollo-upload-client": "16.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-styled-components": "1.13.2",
    "date-fns": "2.23.0",
    "dotenv": "10.0.0",
    "downshift": "6.1.7",
    "graphql": "15.5.3",
    "graphql-tag": "2.12.5",
    "graphql-upload": "12.0.0",
    "lodash.debounce": "4.0.8",
    "next": "11.1.2",
    "next-with-apollo": "5.2.1",
    "nprogress": "0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-transition-group": "4.4.2",
    "styled-components": "5.3.1",
    "waait": "1.0.5"
  },
  "devDependencies": {
    "@apollo/react-testing": "4.0.0",
    "@babel/core": "7.15.5",
    "@babel/preset-env": "7.15.4",
    "@graphql-codegen/cli": "2.1.1",
    "@graphql-codegen/typescript": "2.2.0",
    "@graphql-codegen/typescript-apollo-client-helpers": "2.1.3",
    "@graphql-codegen/typescript-operations": "2.1.3",
    "@graphql-codegen/typescript-react-apollo": "3.1.3",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/dotenv": "8.2.0",
    "@types/lodash.debounce": "4.0.6",
    "@types/nprogress": "0.2.0",
    "@types/react": "17.0.20",
    "@types/react-dom": "17.0.9",
    "@types/react-transition-group": "4.4.2",
    "@types/styled-components": "5.1.14",
    "babel-jest": "27.1.0",
    "casual": "1.6.2",
    "eslint-config-asjas": "0.0.25",
    "jest": "27.1.0",
    "react-test-renderer": "17.0.2",
    "typescript": "4.4.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
