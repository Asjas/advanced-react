{
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "prestart": "npm run codegen",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "heroku-postbuild": "next build",
    "preinstall": "npx npm-force-resolutions",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --ignore-path .eslintignore --write",
    "check-format": "prettier --ignore-path .eslintignore --list-different",
    "validate": "npm run check-format && npm run lint"
  },
  "dependencies": {
    "@apollo/client": "3.5.8",
    "@apollo/link-error": "2.0.0-beta.3",
    "@apollo/react-ssr": "4.0.0",
    "@stripe/react-stripe-js": "1.7.0",
    "@stripe/stripe-js": "1.22.0",
    "apollo-upload-client": "17.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-styled-components": "2.0.2",
    "date-fns": "2.28.0",
    "dotenv": "14.3.2",
    "downshift": "6.1.7",
    "graphql": "16.2.0",
    "graphql-tag": "2.12.6",
    "graphql-upload": "13.0.0",
    "lodash.debounce": "4.0.8",
    "next": "12.0.8",
    "next-with-apollo": "5.2.1",
    "nprogress": "0.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-transition-group": "4.4.2",
    "styled-components": "5.3.3",
    "waait": "1.0.5"
  },
  "devDependencies": {
    "@apollo/react-testing": "4.0.0",
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@graphql-codegen/cli": "2.4.0",
    "@graphql-codegen/near-operation-file-preset": "2.2.3",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-apollo-client-helpers": "2.1.9",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-codegen/typescript-react-apollo": "3.2.4",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/apollo-upload-client": "17.0.0",
    "@types/dotenv": "8.2.0",
    "@types/jest": "27.4.0",
    "@types/lodash.debounce": "4.0.6",
    "@types/nprogress": "0.2.0",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-transition-group": "4.4.4",
    "@types/styled-components": "5.1.21",
    "babel-jest": "27.4.6",
    "casual": "1.6.2",
    "eslint-config-asjas": "1.0.0",
    "jest": "27.4.7",
    "typescript": "4.5.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false
            }
          ]
        ]
      }
    }
  }
}
